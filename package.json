{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/apps/*"
    ],
    "nohoist": [
      "**/webpack-dev-server",
      "**/cross-env",
      "**/npm-run-all",
      "**/node-sass-chokidar",
      "**/cp-cli",
      "**/rollup",
      "**/typescript",
      "**/typescript/**",
      "**/@types",
      "**/@types/**"
    ]
  },
  "scripts": {
    "precommit": "lerna run --concurrency 1 --stream precommit",
    "release": "lerna version --no-private --conventional-graduate",
    "release:minor": "lerna version minor --no-private",
    "release:pre": "lerna version --no-private prerelease",
    "test": "CI=true yarn test:modules && yarn test:apps && CI=true yarn test:modules:coverage",
    "test:apps": "lerna run test:nowatch --stream --scope @vinteo/web-client --scope vinteo.screencast --scope Vinteo.Desktop --scope @vinteo/video-player",
    "test:circular": "lerna run test:circular --stream",
    "test:modules": "lerna run test --stream --ignore @vinteo/web-client --ignore vinteo.screencast --ignore Vinteo.Desktop --ignore @vinteo/video-player --ignore @vinteo/desktop-client-web --ignore @vinteo/desktop-client-web-cypress --ignore @vinteo/web-client-cypress --ignore vinteo.screencast-cypress",
    "test:modules:coverage": "lerna run test:coverage --stream --ignore @vinteo/web-client --ignore vinteo.screencast --ignore Vinteo.Desktop --ignore @vinteo/video-player --ignore @vinteo/desktop-client-web --ignore @vinteo/desktop-client-web-cypress --ignore @vinteo/web-client-cypress --ignore vinteo.screencast-cypress",
    "tsc": "tsc",
    "version": "prettier --write \"packages/**/**/CHANGELOG.md\" && yarn lerna run configure:version --stream --scope Vinteo.Desktop && git add ."
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@lerna/filter-options": "^4.0.0",
    "@types/filesystem": "^0.0.32",
    "@types/history": "^4.7.11",
    "@types/jest": "^27.0.3",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.42",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "core-js": "2.6.12",
    "cz-lerna-changelog": "^2.0.3",
    "electron-builder": "23.0.3",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "7.30.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "husky": "^8.0.1",
    "jest": "27.4.5",
    "lerna": "^4.0.0",
    "postcss": "8.4.14",
    "prettier": "^2.7.0",
    "rimraf": "^3.0.2",
    "typescript": "4.7.3"
  }
}