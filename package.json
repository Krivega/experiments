{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/apps/*",
      "packages/components",
      "packages/mediastream-api",
      "packages/system-devices",
      "packages/video-processor",
      "packages/utils"
    ],
    "nohoist": [
      "**/webpack-dev-server",
      "**/cross-env",
      "**/npm-run-all",
      "**/node-sass-chokidar",
      "**/cp-cli",
      "**/rollup",
      "**/typescript",
      "**/typescript/**",
      "**/@types",
      "**/@types/**",
      "**/@tensorflow",
      "**/@tensorflow/**",
      "**/@tensorflow-models",
      "**/@tensorflow-models/**",
      "**/@mediapipe",
      "**/@mediapipe/**"
    ]
  },
  "scripts": {
    "precommit": "lerna run --concurrency 1 --stream precommit",
    "test": "CI=true yarn test:modules && yarn test:apps && CI=true yarn test:modules:coverage",
    "test:apps": "lerna run test:nowatch --stream --scope user-media-api-test --scope video-processing",
    "test:circular": "lerna run test:circular --stream",
    "test:modules": "lerna run test --stream --ignore user-media-api-test --ignore video-processing",
    "test:modules:coverage": "lerna run test:coverage --stream --ignore user-media-api-test --ignore video-processing",
    "tsc": "tsc"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@lerna/filter-options": "^4.0.0",
    "@types/filesystem": "^0.0.32",
    "@types/history": "^4.7.11",
    "@types/jest": "^27.0.3",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.0",
    "@types/offscreencanvas": "2019.7.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "core-js": "2.6.12",
    "cz-lerna-changelog": "^2.0.3", 
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.3.0",
    "husky": "^8.0.1",
    "jest": "27.4.5",
    "lerna": "^4.0.0",
    "postcss": "8.4.14",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "4.7.4"
  }
}