{
  "name": "@vinteo/system-devices",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "deps:check": "ncu",
    "deps:update": "ncu -u",
    "format": "prettier --write \"src/**/*.{js,ts,tsx,json}\"",
    "lint": "yarn lint:js && yarn lint:ts",
    "lint:js": "eslint src/. --ext .js,.jsx,.ts,.tsx",
    "lint:ts": "tsc",
    "precommit": "lint-staged",
    "test": "react-scripts test --verbose=false --passWithNoTests"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!**/__tests-utils__/**",
      "!**/__mocks__/**",
      "!/dist"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    }
  },
  "devDependencies": {
    "lint-staged": "12.1.7"
  },
  "main:src": "src/index.ts"
}